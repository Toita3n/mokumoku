<div class="card">
  <!-- Card header -->
  <div class="card-header">
    <h3 class="mb-0">プロフィール</h3>
  </div>
  <!-- Card body -->
  <div class="card-body">
   <p class="d-flex justify-content-end">
    <%= render 'users/follow_form'%>
   </p>
    <%= form_with model: @user, url: mypage_profile_path do |f|  %>
      <div class="d-lg-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center mb-4 mb-lg-0">
          <%= image_tag @user.decorate.avatar, class: 'avatar-xl rounded-circle' %>
          <div class="ms-3">
            <h4 class="mb-3">Your avatar</h4>
          </div>
        </div>
      </div>
    <% end %>
    <hr class="my-5">
    <div>
      <h4 class="mb-0">Personal Details</h4>
      <!-- Form -->
      <%= form_with(model: @user, url: mypage_profile_path) do |f| %>
        <div class="mb-3">
          <%= f.label :name, class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'らんてくん', disabled: "aria-label" %>
        </div>
        <div class="mb-3">
          <%= f.label :hobby, class: 'form-label' %>
          <%= f.text_field :hobby, class: 'form-control', placeholder: '趣味', disabled: "aria-label" %>
        </div>
        <div class="mb-3">
          <%= f.label :profile, class: 'form-label' %>
          <%= f.text_field :profile, class: 'form-control', placeholder: '意気込み', disabled: "aria-label" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
